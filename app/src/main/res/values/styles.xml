<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OnBoardingTitleStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/on_boarding_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OnBoardingDetailsStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/on_boarding_details_text_size</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="EmptyListStateTextStyle">
        <item name="android:lineSpacingMultiplier">1.6</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/empty_list_state_text_size</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>